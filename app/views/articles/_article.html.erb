<div id="<%= dom_id article %>">
  <p>
    <strong>Title:</strong>
    <%= article.title %>
  </p>

  <p>
    <strong>Avatar:</strong>
    <% if article.avatar.attached? %>
      <%= resize_image_tag(article.avatar, 200, 200) %>
    <% end %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= article.content %>
  </p>

</div>
